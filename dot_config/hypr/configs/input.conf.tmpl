# https://wiki.hypr.land/Configuring/Variables/#input
input {
    kb_layout = {{ .hyprland.input.kb_layout }}
    kb_variant = {{ .hyprland.input.kb_variant }}
    kb_model =
    kb_options =
    kb_rules =

    follow_mouse = 1
    sensitivity = {{ .hyprland.input.sensitivity }}

    touchpad {
        natural_scroll = {{ .hyprland.input.natural_scroll }}
    }
}

# Gestures
gesture = 3, horizontal, workspace

